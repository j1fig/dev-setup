DEV_REPO=$PROJECT_HOME/dev
HOST_SHARED_FOLDER=/media/sf_debian_share

#TAGS ENV
DIRTAGS=$DEV_REPO/dirtags.sh

LINODE="j1figuei@176.58.102.95"

alias ssh-linode='ssh $LINODE'

function scp-linode {
      scp $1 $LINODE:$2
}

SSH_ENV="$HOME/.ssh/environment"

function start_agent {
     echo "Initialising new SSH agent..."
     /usr/bin/ssh-agent | sed 's/^echo/#echo/' > "${SSH_ENV}"
     echo succeeded
     chmod 600 "${SSH_ENV}"
     . "${SSH_ENV}" > /dev/null
     /usr/bin/ssh-add;
}

# Source SSH settings, if applicable

if [ -f "${SSH_ENV}" ]; then
     . "${SSH_ENV}" > /dev/null
     #ps ${SSH_AGENT_PID} doesn't work under cywgin
     ps -ef | grep ${SSH_AGENT_PID} | grep ssh-agent$ > /dev/null || {
         start_agent;
     }
else
     start_agent;
fi
